{
  "manifest_version": 2,
  "name": "Wishlist",
  "version": "0.0.1.0",

  "default_locale": "en",
  "description": "Product wishlist to purchase later",
  "icons": {
    "19": "images/icon19.png",
    "128": "images/icon128.png"
  },

  "browser_action": {
    "default_icon": { "19": "images/icon19.png" }
  },

  "author": "Brave Crew",
  "background": {
    "scripts": [ "js/background.js" ],
    "persistent": false
  },

  "options_page": "options.html",

  "permissions": [ "activeTab" ]
}