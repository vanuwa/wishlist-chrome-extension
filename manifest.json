{
  "manifest_version": 2,
  "name": "Wishlist",
  "version": "0.0.0.1",

  "default_locale": "en",
  "description": "Product wishlist to purchase later",
  "icons": {
    "19": "images/icon19.png",
    "128": "images/icon128.png"
  },

  "permissions": [ "tabs", "activeTab", "contextMenus", "http://*/*", "https://*/*" ],

  "browser_action": {
    "default_icon": { "19": "images/icon19.png" }
  },

  "author": "Brave Crew",
  "background": {
    "scripts": [ "js/background.js", "js/storage.js" ],
    "persistent": false
  },

  "content_scripts": [{
    "matches": [ "http://*/*", "https://*/*" ],
    "css": [ "css/crawler.css" ],
    "js": [ "js/jquery-2.1.4.js", "js/crawler.js" ]
  }],

  "options_page": "options.html",

  "permissions": [ "activeTab" ]
}